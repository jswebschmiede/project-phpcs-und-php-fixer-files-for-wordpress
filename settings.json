{
    // Editor: automatisch beim Speichern formatieren
    "editor.formatOnSave": true,

    // PHPCS: Standard auf WordPress setzen
    "phpcs.standard": "WordPress",

    // Pfad zu globalem phpcs + phpcbf (Windows)
    "phpcs.executablePath": "C:\\Users\\Joerg\\AppData\\Roaming\\Composer\\vendor\\bin\\phpcs.bat",

    // Dateien/Ordner ausschließen
    "files.exclude": {
        "**/node_modules": true,
        "**/vendor": true,
        "**/build": true,
        "**/dist": true,
        "**/tests": true
    },

    // Standard-Formatter für PHP setzen
    "[php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer"
    },

    "php-cs-fixer.executablePathWindows": "C:\\Users\\Joerg\\AppData\\Roaming\\Composer\\vendor\\bin\\php-cs-fixer.bat",
    "php-cs-fixer.onsave": true,
    "php-cs-fixer.rules": "@PSR12 @WordPress",
    "php-cs-fixer.config": ".php-cs-fixer.php;.php-cs-fixer.dist.php",
    "php-cs-fixer.allowRisky": true,
    "php-cs-fixer.pathMode": "override",
    "php-cs-fixer.documentFormattingProvider": true
}
